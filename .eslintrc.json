{
  "extends": "webpack",
  "parserOptions": {
    // We're using CommonJS which runs in script mode
    "sourceType": "script"
  },
  "rules": {
    // We can't use the following rules with node v4. Remove this if node v4 is officially not supported anymore
    // node v4 start
    "prefer-spread": "off",
    "prefer-rest-params": "off",
    "prefer-destructuring": "off",
    "comma-dangle": ["error", {
        "arrays": "always-multiline",
        "exports": "always-multiline",
        "functions": "ignore", // dangling commas in functions are not supported yet
        "imports": "always-multiline",
        "objects": "always-multiline"
    }] // http://eslint.org/docs/rules/comma-dangle
    // node v4 end
  }
}
